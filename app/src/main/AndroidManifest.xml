<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		package="online.personaapp">

	<!--Permissions-->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<!--Application-->
	<application
			android:name="online.personaapp.PersonaApplication"
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
			tools:ignore="GoogleAppIndexingWarning">

		<!--Activities-->
		<activity
				android:name="online.personaapp.core.presentation.RouteActivity"
				android:noHistory="true"
				android:theme="@style/AppTheme.Translucent">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
				android:name="online.personaapp.auth.presentation.LoginActivity"
				android:label="@string/login_screen_title"></activity>

		<activity
				android:name="online.personaapp.movies.presentation.view.MoviesActivity"
				android:label="@string/movies_screen_title"></activity>

		<activity
				android:name="online.personaapp.movies.presentation.view.MovieDetailsActivity"
				android:label="@string/movie_details_screen_title"
				android:theme="@style/AppTheme.Translucent"></activity>

	</application>

</manifest>

